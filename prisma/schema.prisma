generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model - uses Clerk for authentication
model User {
  id            String    @id @default(cuid())
  clerkId       String    @unique // Clerk user ID
  name          String?
  email         String?   @unique
  image         String?
  typingResults TypingResult[]
  notifications Notification[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

// QuickKey specific models
model TypingResult {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  wpm         Float
  accuracy    Float
  charsTyped  Int
  errors      Int
  testDuration Int
  testType    String   // Can be "words", "time", etc.
  createdAt   DateTime @default(now())
}

// Notification model
model Notification {
  id        String   @id @default(cuid())
  userId    String
  title     String
  message   String
  read      Boolean  @default(false)
  type      String   // e.g., "welcome", "achievement", "system"
  createdAt DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Multiplayer Room model
model MultiplayerRoom {
  id        String   @id
  status    String   @default("waiting") // waiting, in-progress, completed
  hostId    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
